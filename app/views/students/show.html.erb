<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => Student %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @student.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:middle_name) %></dt>
      <dd><pre class="prettyprint"><%= @student.middle_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @student.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone) %></dt>
      <dd><pre class="prettyprint"><%= @student.phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:roll_no) %></dt>
      <dd><pre class="prettyprint"><%= @student.roll_no %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gender) %></dt>
      <dd><pre class="prettyprint"><%= @student.gender %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:birthdate) %></dt>
      <dd><pre class="prettyprint"><%= @student.birthdate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @student.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mobile) %></dt>
      <dd><pre class="prettyprint"><%= @student.mobile %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:school) %></dt>
      <dd><pre class="prettyprint"><%= @student.school %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @student.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image) %></dt>
      <dd><pre class="prettyprint"><%= @student.image %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

